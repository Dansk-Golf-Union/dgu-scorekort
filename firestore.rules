rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to get authenticated user's unionId
    function getAuthUnionId() {
      return request.auth.token.unionId;
    }
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // ==========================================
    // SCORECARD SYSTEM
    // ==========================================
    
    // Scorecards collection - main storage for marker approval flow
    // Contains all scorecards: pending → approved/rejected → submitted to WHS
    // TEMP: Open for testing (matches Friends System pattern)
    match /scorecards/{documentId} {
      allow read, write: if true; // TEMP: Open for testing
    }
    
    // ==========================================
    // COURSE CACHE (READ-ONLY FOR CLIENT)
    // ==========================================
    
    // Course cache clubs - updated nightly by Cloud Function
    match /course-cache-clubs/{clubId} {
      allow read: if true;
      allow write: if false; // Only Cloud Functions via Admin SDK
    }
    
    // Course cache metadata - updated nightly by Cloud Function
    match /course-cache-metadata/{docId} {
      allow read: if true;
      allow write: if false; // Only Cloud Functions via Admin SDK
    }
    
    // ==========================================
    // FRIENDS SYSTEM COLLECTIONS
    // ==========================================
    // NOTE: TEMPORARY OPEN RULES FOR TESTING
    // TODO: Implement proper Firebase Auth with custom claims for unionId
    
    // Friendships collection
    // TEMP: Allow all read/write for testing
    match /friendships/{friendshipId} {
      allow read, write: if true; // TEMP: Open for testing
    }
    
    // Friend requests collection
    // TEMP: Allow all read/write for testing
    match /friend_requests/{requestId} {
      allow read, write: if true; // TEMP: Open for testing
    }
    
    // User privacy settings collection
    // TEMP: Allow all read/write for testing
    match /user_privacy_settings/{userId} {
      allow read, write: if true; // TEMP: Open for testing
    }
    
    // ==========================================
    // ACTIVITY FEED COLLECTIONS
    // ==========================================
    
    // User score cache - read-only for authenticated users
    // Only Cloud Functions can write
    match /user_score_cache/{unionId} {
      allow read: if isAuthenticated();
      allow write: if false; // Only Cloud Functions
    }
    
    // Activities - read for authenticated, update for own activities (dismiss)
    // Only Cloud Functions can create/delete
    // TEMP: Open for testing until OAuth is implemented
    match /activities/{activityId} {
      allow read: if true; // TEMP: Open for testing
      allow update: if true; // TEMP: Open for testing
      allow create, delete: if false; // Only Cloud Functions
    }
    
    // ==========================================
    // BIRDIE BONUS CACHE
    // ==========================================
    
    // Birdie Bonus cache - read-only for authenticated users
    // Updated nightly by Cloud Function at 04:00 CET
    // Only Cloud Functions can write
    //
    // TODO: Fix authentication and remove temporary open access
    // Issue: Even with isAuthenticated() check, permission errors occur
    // when using Source.server (force server read) from Flutter client.
    // Root cause unclear - possibly Firebase Auth token propagation issue.
    //
    // Temporary solution: Open read access (if true)
    // Target solution: allow read: if request.auth != null && request.auth.token.unionId != null;
    //
    // See: README.md "Security TODO" section for details
    match /birdie_bonus_cache/{dguNumber} {
      allow read: if true; // TEMP: Open for testing (TODO: Fix auth)
      allow write: if false; // Only Cloud Functions (via Admin SDK)
    }
    
    // ==========================================
    // TOURNAMENTS & RANKINGS CACHE
    // ==========================================
    
    // Tournaments cache - read-only for all users
    // Updated nightly by Cloud Function at 02:30 CET
    // Only Cloud Functions can write
    match /tournaments_cache/{docId} {
      allow read: if true; // Public data - open read access
      allow write: if false; // Only Cloud Functions (via Admin SDK)
    }
    
    // Rankings cache - read-only for all users
    // Updated nightly by Cloud Function at 02:30 CET
    // Only Cloud Functions can write
    match /rankings_cache/{docId} {
      allow read: if true; // Public data - open read access
      allow write: if false; // Only Cloud Functions (via Admin SDK)
    }
    
    // Tournament icons cache - read-only for all users
    // Updated nightly by Cloud Function at 02:30 CET
    // Only Cloud Functions can write
    match /tournament_icons_cache/{iconId} {
      allow read: if true; // Public data - open read access
      allow write: if false; // Only Cloud Functions (via Admin SDK)
    }
    
    // ==========================================
    // USER STATS CACHE
    // ==========================================
    
    // User stats - read-only for authenticated users
    // Updated by Cloud Function triggers on friendship/chat changes
    // Similar pattern to user_score_cache and birdie_bonus_cache
    match /user_stats/{unionId} {
      allow read: if true; // TEMP: Open for testing (TODO: Fix OAuth)
      allow write: if false; // Only Cloud Functions (via Admin SDK)
    }
    
    // ==========================================
    // CHAT SYSTEM
    // ==========================================
    // NOTE: TEMPORARY OPEN RULES FOR TESTING
    // TODO: Tighten rules when OAuth is fully implemented

    // Chat groups - TEMP: Open for testing
    match /chat_groups/{groupId} {
      allow read, write: if true; // TEMP: Open for testing
      // Target rules (implement when OAuth ready):
      // allow read: if request.auth != null && 
      //                request.auth.token.unionId in resource.data.members;
      // allow create: if request.auth != null && 
      //                  request.auth.token.unionId in request.resource.data.members;
      // allow update: if request.auth != null && 
      //                  request.auth.token.unionId in resource.data.members;
      // allow delete: if request.auth != null && 
      //                  request.auth.token.unionId == resource.data.createdBy;
    }

    // Chat messages - TEMP: Open for testing
    match /messages/{groupId}/messages/{messageId} {
      allow read, write: if true; // TEMP: Open for testing
      // Target rules (implement when OAuth ready):
      // allow read: if request.auth != null && 
      //                request.auth.token.unionId in get(/databases/$(database)/documents/chat_groups/$(groupId)).data.members;
      // allow create: if request.auth != null && 
      //                  request.auth.token.unionId in get(/databases/$(database)/documents/chat_groups/$(groupId)).data.members &&
      //                  request.resource.data.senderId == request.auth.token.unionId;
      // allow delete: if request.auth != null && 
      //                  request.auth.token.unionId == resource.data.senderId &&
      //                  request.time < resource.data.timestamp + duration.value(5, 'm');
    }
    
    // ==========================================
    // DEFAULT DENY ALL
    // ==========================================
    
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

